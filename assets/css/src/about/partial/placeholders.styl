$darkgray = #2a2d34

$scrollbar
  &::-webkit-scrollbar-track
    background-color: transparent

  &::-webkit-scrollbar
    width: 8px

  &::-webkit-scrollbar-thumb
    background-color: rgba(0,0,0,.55)
    border-radius: 5px

$title
  font-size: 32px;
  font-weight: normal;
  font-family  "Open Sans","helvetica neue", helvetica, Arial, sans-serif;
  letter-spacing 2px
  &::after
    width 210px
    margin: 0 auto
    height: 1px
    background-color $darkgray
    content: ""
    display block

$hide
  display: none

$show
  display: block